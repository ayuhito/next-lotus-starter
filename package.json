{
  "name": "next-lotus-starter",
  "description": "Next.js starter to kickstart my projects.",
  "version": "1.0.0",
  "author": "Lotus <declininglotus@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "format:lint": "eslint --fix **/*.{js,jsx,ts,tsx}",
    "format:prettier": "prettier --write **/*.{js,jsx,ts,tsx,css,md,json}",
    "format": "yarn format:lint && yarn format:prettier"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.0",
    "@chakra-ui/react": "^2.0.2",
    "@chakra-ui/theme-tools": "^2.0.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@fontsource/poppins": "^4.5.8",
    "@fontsource/roboto-mono": "^4.5.7",
    "framer-motion": "^6.3.3",
    "next": "^12.1.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.1.6",
    "@types/node": "^17.0.34",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "next-sitemap": "^2.5.20",
    "prettier": "^2.3.2",
    "typescript": "^4.6.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DecliningLotus/next-lotus-starter"
  },
  "bugs": {
    "url": "https://github.com/DecliningLotus/next-lotus-starter/issues"
  }
}
